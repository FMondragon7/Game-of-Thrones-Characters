---
import "@fontsource/noto-serif-jp";
import "@fontsource/cormorant-garamond/400-italic.css";
import Header from "../sections/Header.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Game of thrones characters app" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="overflow-hidden">
		<div class="h-screen w-screen px-20 py-10">
			<Header />
			<slot />
		</div>
	</body>
</html>
<style is:global>
	body,
	html {
		font-family: "Noto Serif JP", system-ui, sans-serif;
		background: url(../assets/game-of-thrones-bg.png) no-repeat center center
			fixed;
		background-size: cover;
		margin: 0;
		padding: 0;
	}

	.quote {
		font-family: "Cormorant Garamond";
	}

	::-webkit-scrollbar {
		width: 2px;
	}

	::-webkit-scrollbar-thumb {
		background-color: #4f4f4f;
		border-radius: 5px;
	}

	::-webkit-scrollbar-track {
		background-color: #ccc;
	}
</style>
